- set_meta_tags noindex: true

.row
  br
  br
  table.company
   col[width="15%"]
   col[width="8%"]
   col[width="8%"]
   col[width="15%"]
   col[width="8%"]
   col[width="5%"]
   col[width="5%"]
   col[width="5%"]
   col[width="5%"]
   col[width="5%"]
   col[width="5%"]
   col[width="5%"]
   tr
     th 会社名
     th 担当者
     th 電話番号
     th 問い合わせ日
     th アサヒ
     th コカコーラ
     th 伊藤園
     th ダイドー
     th 山久
     th ネオス
     th その他
     th メール送信
   - @estimates.each do |estimate|
    tr
     td = link_to estimate.co, estimate_path(estimate), clsss:"store"
     td = estimate.name
     td = estimate.tel
     td = estimate.address
     td = estimate.created_at.strftime("%Y年%m月%d日")
     td = estimate.created_at.strftime("%-H時%-M分%-S秒")
     td = estimate.created_at.strftime("%a")
     td = estimate.comment ? estimate.comment.asahi : nil
     td = estimate.comment ? estimate.comment.cocacola : nil
     td = estimate.comment ? estimate.comment.itoen : nil
     td = estimate.comment ? estimate.comment.dydo : nil
     td = estimate.comment ? estimate.comment.yamakyu : nil
     td = estimate.comment ? estimate.comment.neos : nil
     td = estimate.comment ? estimate.comment.body : nil
     - if estimate.send_mail_flag == true
      td style="color: green" class="btn btn-success" 送信済
     - else
      td style="color: red" class="btn btn-danger" 未送信
  br
    hr.line
    br
    = paginate(@estimates)


table.company
    tbody
      tr
        th
          | CUSTOMER_CSVファイルエクスポート

        td.center
          = link_to 'エクスポート', estimates_path(format: :csv), class: 'btn btn-primary'
