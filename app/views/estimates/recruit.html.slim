          = estimate.people
          |人
       td = estimate.recruitment
       td = estimate.importance
       td = estimate.period
       td = link_to "提案する", confirm_point_estimate_path(estimate), class:"btn btn-success"
    br
      hr.line
      br
      = paginate(@estimates)
